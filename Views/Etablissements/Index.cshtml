@model IEnumerable<OnlineSchoolWebApp.Models.Etablissement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>Années Scolaires</th> <!-- New column for AnneeScolaires link -->
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
               
                <td>
                    <a asp-action="AnneeScolaires" asp-route-id="@item.EtablissementId">Annee Scolaires</a>
                </td>
                <td>
                    <form asp-action="Edit" asp-route-id="@item.EtablissementId" method="get">
                        <button type="submit" class="btn btn-outline-secondary">Modifier</button>
                    </form>
                </td>
            
            
                <td>
                    <form asp-action="Details" asp-route-id="@item.EtablissementId" method="get">
                        <button type="submit" class="btn btn-outline-success">Détails</button>
                    </form>
                </td>
            
           
                <td>
                    <form asp-action="Delete" asp-route-id="@item.EtablissementId" method="get">
                        <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
