@model IEnumerable<OnlineSchoolWebApp.Models.Cours>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                cours
            </th>
            <th>
                Enseignant
            </th>
            <th>
                Classe
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enseignant.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoursId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoursId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoursId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
